package pod.q1.node3;

/**
 * Respons√°vel por disponibilizar um servidor.
 * 
 * @author arigarcia
 *
 */
public interface NodeServer {
	
	/**
	 * Inicia o servidor
	 */
	void start();
	
	/**
	 * Recebe os parametros de consulta
	 * @return
	 */
	String recv();
	
	/**
	 * Realiza a consulta no JdbcConnect
	 * 
	 * @param params
	 * @return
	 */
	String query(String params);
	
	/**
	 * Envia o resultado da consulta
	 * 
	 * @param queryResult
	 */
	void send(String queryResult);
	
	/**
	 * Encerra o servidor
	 */
	void close();
}
